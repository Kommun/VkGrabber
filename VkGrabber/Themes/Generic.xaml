<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:VkGrabber"
    xmlns:controls="clr-namespace:VkGrabber.Controls">

    <Style TargetType="controls:SettingsSection">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:SettingsSection">
                    <Border BorderThickness="1"
                            BorderBrush="Gray"
                            Padding="20"
                            Margin="0,5"
                            Width="550"
                            Background="White"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="{TemplateBinding Header}"
                                       FontSize="30"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,20"/>
                            <ContentPresenter/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
