<UserControl x:Class="VkGrabber.Controls.DateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VkGrabber.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel Orientation="Horizontal">
        <DatePicker Name="dPicker"
                    SelectedDateChanged="dPicker_SelectedDateChanged"/>
        <local:TimePicker x:Name="tPicker"
                          TimeChanged="tPicker_TimeChanged"/>
    </StackPanel>
</UserControl>
